<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/blue"
    android:gravity="center"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Match Fragment"
        android:textSize="50sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/displayTeam1Match"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Team 1"
        />


    <EditText
        android:id="@+id/resultsTeam1Match"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:text="0" />


    <TextView
        android:id="@+id/displayTeam2Match"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Team 2"
        />

    <EditText
        android:id="@+id/resultsTeam2Match"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:text="0" />

    <Button
        android:id="@+id/finishMatchBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Finish Match" />

</LinearLayout>